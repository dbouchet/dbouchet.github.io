---
layout: page
---
<div class="post">
  <article>
    <hr>
    {{ page.intro }}
    {% if page.profiles %}
      {% for profile in page.profiles %}
        <hr>
	<div class="row justify-content-sm-center">
 	   <div class="col-sm-8 mt-3 mt-md-0">
		profile.content
 	   </div>
 	   <div class="col-sm-4 mt-3 mt-md-0">
        	{% include figure.liquid path=profile.image class="img-fluid rounded z-depth-1" %}	
           </div>
	</div>
      {% endfor %}
    {% endif %}
  </article>
</div>
