<div class="grid-sizer"></div>
<div class="grid-item">
  <a href="{% if collaboration.redirect %}{{ collaboration.redirect }}{% else %}{{ collaboration.url | relative_url }}{% endif %}">
    <div class="card hoverable">
      {% if collaboration.img %}
        {%
          include figure.liquid
          loading="eager"
          path=collaboration.img
          sizes = "250px"
          alt="collaboration thumbnail"
        %}
      {% endif %}
      <div class="card-body">
        <h5 class="card-title">{{ collaboration.title }}</h5>
        <p class="card-text">{{ collaboration.complement }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if collaboration.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ collaboration.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if collaboration.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ collaboration.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
